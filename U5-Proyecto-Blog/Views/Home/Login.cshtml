@model U5_Proyecto_Blog.Models.UserLogin
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Iniciar Sesion";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Estilos.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Istok+Web:wght@400;700&display=swap" rel="stylesheet">
    <title>@ViewData["Title"]</title>
</head>

<body>
    <header>
        <div class="logo">
            <h1 class="logotxt"><span>Game</span>Tec</h1>
        </div>
    </header>

    <div class="auth-content">
        <form action="~/login" method="post">
            <h2 class="form-title">Iniciar Sesion</h2>
            <div>
                <label>Usuario</label>
                <input asp-for="Usuario" type="text" class="text-input">
            </div>
            <div>
                <label>Contraseña</label>
                <input asp-for="Contraseña" type="password" class="text-input">
            </div>
            <div>
                <button type="submit" name="login-btn" class="btn btn-big">Iniciar Sesion</button>
            </div>
            <p>¿No estas registrado? <a href="~/signup">Registrarte</a></p>
        </form>
        
        @Html.ValidationSummary(true)
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="~/scripts.js"></script>
</body>
</html>

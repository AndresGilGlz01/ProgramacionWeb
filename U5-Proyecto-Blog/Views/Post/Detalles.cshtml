@model U5_Proyecto_Blog.Models.ViewModels.Post.DetallesViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-wrapper">
    <div class="content clearfix">
        <div class="main-cont single">
            <h1 class="post-title">@Model.Titulo</h1>
            <div class="post-content">
                @Html.Raw(Model.Contenido)
            </div>
        </div>
        <div class="sidebar single">
            <div class="section topics">
                <h2 class="section-title">Categorias del Post</h2>
                <ul>
                    @foreach(var categoria in Model.Categorias)
                    {
                        <li><a href="~/categoria/@categoria.Nombre.ToLower().Replace(" ", "-")">@categoria.Nombre</a></li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

@model U5_Proyecto_Blog.Models.ViewModels.Post.IndexViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-wrapper">
    <div class="post-slider">
        <h1 class="slider-title">Posts Destacados</h1>
        <i class="fas fa-chevron-left prev"></i>
        <i class="fas fa-chevron-right next"></i>

        <div class="post-wrapper">
            @foreach (var post in Model.PostRecomendados)
            {
                <div class="post">
                    <img src="~/imagenes/@(post.Id).png" alt="@post.Titulo" class="slider-img" asp-append-version>
                    <div class="post-info">
                        <h4><a href="~/post/@(post.Titulo.ToLower().Replace(" ","-"))">@post.Titulo</a></h4>
                        <i class="far fa-user"> @post.Creador</i>
                        &nbsp;
                        <i class="far fa-calendar"> @post.Fecha.ToShortDateString()</i>
                    </div>
                </div>           
            }
        </div>
    </div>
    <div class="content clearfix">
        <div class="main-cont">
            <h1 class="recent-post-title">Ultimos Post</h1>
            @foreach (var post in Model.UltimosPost)
            {
                <div class="post">
                    <img src="~/imagenes/@(post.Id).png" alt="" class="post-img" asp-append-version>
                    <div class="post-preview">
                        <h2><a href="~/post/@(post.Titulo.ToLower().Replace(" ", "-"))">@post.Titulo</a></h2>
                        <i class="far fa-user"> @post.Creador</i>
                        &nbsp;
                        <i class="far fa-calendar"> @post.Fecha.ToShortDateString()</i>
                        <p class="prev-text">@post.Descripcion</p>
                        <a href="~/post/@(post.Titulo.ToLower().Replace(" ", "-"))" class="btn read">Leer Mas</a>
                    </div>
                </div>                
            }
        </div>
        <div class="sidebar">
            <div class="section search">
                <h2 class="section-title">Buscar</h2>
                <form>
                    <input type="text" name="search-term" class="text-input" placeholder="Buscar...">
                </form>
            </div>

            <div class="section topics">
                <h2 class="section-title">Categorias</h2>
                <ul>
                    @foreach (var categoria in Model.Categorias)
                    {
                        <li><a href="~/categoria/@(categoria.Nombre.ToLower().Replace(" ", "-"))">@categoria.Nombre</a></li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

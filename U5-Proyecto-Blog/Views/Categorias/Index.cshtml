@model U5_Proyecto_Blog.Models.ViewModels.Categorias.IndexViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="recent-post-title">Categorias</h1>

<div class="content clearfix">
    @foreach (var categoria in Model.Categorias)
    {
        <div class="main-cont">
            <h2 class="recent-post-title">@categoria.Nombre</h2>
            <small>@categoria.Descripcion</small>

            <div class="posts">
                @foreach (var post in categoria.Posts)
                {
                    <a href="~/post/@(post.Titulo.ToLower().Replace(" ", "-"))">
                        <div class="post">
                            <div>
                                <h2>
                                    @post.Titulo
                                </h2>
                            </div>
                        </div>
                    </a>
                }
            </div>
        </div>
    }
    <style>
        .posts {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }
        .post {
            padding: 10px;
            color: #333;
            text-decoration: underline;
            min-width: 200px;
            width: 200px;
            text-overflow: ellipsis;
            text-align: center;
            background-color: #fff;
            border: 1px solid #ddd;
            height: auto !important;
        }
    </style>
</div>

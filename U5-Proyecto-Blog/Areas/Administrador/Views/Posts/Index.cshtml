@model U5_Proyecto_Blog.Areas.Administrador.Models.ViewModels.Posts.IndexViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutProfile.cshtml";
}

<div class="admin-content">
    <div class="button-group">
        <a href="~/administrar/posts/agregar" class="btn btn-big">Agregar Post</a>
    </div>
    <div class="content">
        <h2 class="page-title">Administrar Posts</h2>
        <table>
            <thead>
                <th>N</th>
                <th>Titulo</th>
                <th>Cantidad de categorias</th>
                <th>Autor</th>
                <th colspan="3">Accion</th>
            </thead>
            <tbody>
                @foreach (var post in Model.Posts)
                {
                    <tr>
                        <td>@post.Id</td>
                        <td>@post.Titulo</td>
                        <td>@post.CantidadCategorias</td>
                        <td>@post.Autor</td>
                        @if (post.Pertenece)
                        {
                            <td><a href="~/administrar/posts/editar/@(post.Id)" class="edit">Editar</a></td>
                        }
                        <td><a href="~/administrar/posts/eliminar/@(post.Id)" class="delete">Borrar</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@model U5_Proyecto_Blog.Areas.Administrador.Models.ViewModels.Usuarios.EliminarViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Eliminar Usuario";
    Layout = "~/Views/Shared/_LayoutProfile.cshtml";
}

<div class="content">
    <div class="content-delete">
        <h1>Eliminar Usuario</h1>
        <p>¿Está seguro de eliminar al usuario "@Model.NombreUsuario"?</p>
        <form action="~/administrar/usuarios/eliminar" method="post">
            <input asp-for="Id" hidden />
            <div class="button-group">
                <p id="error"></p>
                <input type="submit" class="btn btn-big" value="Si" id="btnSi" />
                <a href="~/administrar/usuarios">
                    <input type="button" class="btn btn-big" value="No" id="btnNo" />
                </a>
            </div>
        </form>
    </div>
</div>

@model U5_Proyecto_Blog.Areas.Administrador.Models.ViewModels.Usuarios.IndexViewModel
@{
    ViewData["Title"] = "Usuarios";
    Layout = "_LayoutProfile";
}

<div class="admin-content">
    <div class="button-group">
        <a href="~/administrar/usuarios/agregar" class="btn btn-big">Agregar Usuario</a>
    </div>
    <div class="content">
        <h2 class="page-title">Administrar Usuarios</h2>
        <table>
            <thead>
                <th>N</th>
                <th>User</th>
                <th>Rol</th>
                <th colspan="3">Accion</th>
            </thead>
            <tbody>
                @foreach (var usuario in Model.Usuarios)
                {
                    <tr>
                        <td>@usuario.Id</td>
                        <td>@usuario.Nombre</td>
                        <td>@usuario.Rol</td>
                        <td><a href="~/administrar/usuarios/editar/@(usuario.Id)" class="edit">Editar</a></td>
                        <td><a href="~/administrar/usuarios/eliminar/@(usuario.Id)" class="delete">Borrar</a></td>
                    </tr>                 
                }
            </tbody>
        </table>
    </div>
</div>

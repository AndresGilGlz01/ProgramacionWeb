@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model U3_Actividad2.Models.Entities.Categorias
@{
    ViewData["Title"] = "Categorias";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<form action="~/Admin/Categorias/Agregar" method="post">
    <div>
        <h1>Agregar Categoría</h1>

        <label>Nombre:</label>
        <input type="text" id="txtNombre" asp-for="Nombre" required />

        <div class="botones">
            <p id="error">@Html.ValidationSummary(true)</p>
            <input type="submit" value="Agregar" id="btnAgregar" />
            <a href="~/Admin/Categorias">
                <input type="button" value="Cancelar" id="btnCancelar" />
            </a>
        </div>
    </div>
</form>

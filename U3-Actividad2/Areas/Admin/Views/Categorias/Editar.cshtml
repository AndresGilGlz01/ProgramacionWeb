@model U3_Actividad2.Models.Entities.Categorias
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<form asp-action="Editar" asp-controller="Categorias" asp-area="Admin" method="post">
    <div>
        <h1>Editar Categoría</h1>

        <input hidden asp-for="Id" />

        <label>Nombre:</label>
        <input type="text" id="txtNombre" asp-for="Nombre" required/>

        <div class="botones">
            <p id="error">@Html.ValidationSummary(true)</p>
            <input type="submit" value="Guardar" id="btnGuardar" />
            <a asp-controller="Categorias" asp-area="Admin">
                <input type="button" value="Guardar" id="btnCancelar" />
            </a>
        </div>
    </div>
</form>

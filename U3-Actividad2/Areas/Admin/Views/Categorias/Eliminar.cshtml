@model U3_Actividad2.Models.Entities.Categorias
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<form asp-action="Eliminar" asp-controller="Categorias" asp-area="Admin" method="post">
    <div>
        <h1>Eliminar Categoría</h1>

        <input hidden asp-for="Id" />

        <p>¿Está seguro de eliminar la categoría "@Model.Nombre"?</p>

        <div class="botones">
            <p id="error">@Html.ValidationSummary(true)</p>
            <input type="submit" value="Si" id="btnSi" />
            <a asp-controller="Categorias" asp-area="Admin">
                <input type="button" value="No" id="btnNo" />
            </a>
        </div>
    </div>
</form>

@model U3_Actividad2.Models.ViewModels.LoginViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>

<html>
<head>
    <link lang="es" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>FruitStore - La mejor fruteria de la Web</title>
    <link href="~/styles.css" rel="stylesheet" />
</head>
<body>
    <header></header>
    <main>

        <form asp-controller="home" asp-action="login" method="post">
            <div>
                <h1>Iniciar sesión</h1>

                <label>Email:</label>
                <input asp-for="Email" type="email" id="txtCorreo" required="required" />

                <label>Password:</label>
                <input asp-for="Contraseña" type="password" required />

                <div class="botones">
                    <p id="error">@Html.ValidationSummary(true)</p>
                    <input type="submit" value="Entrar"  />
                </div>
            </div>
        </form>
    </main>
</body>
</html>
